body,h1,h2,h3,h4,h5
  margin 0

body
  position relative

.sidebar
  border-right 2px solid #eee
  width 230px
  min-height 100vmin
  .sidebar-header
    padding 10px 5px

.choose-folder
  text-align center
  width 300px
  position fixed
  top 50%
  left 50%
  margin-left -150px
  cursor pointer
  padding 20px 0
  border 1px solid #eee
  transition background-color .3s ease
  &:hover
    background-color #f9f9f9
  .choose-icon
    padding-top 20px
    span
      font-size 30px
